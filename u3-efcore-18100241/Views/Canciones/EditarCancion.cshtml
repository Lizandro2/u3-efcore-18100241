@model Cancione
<h1>Editar Cancion</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarPersonaje" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCancion" />
            <div class="form-group">
                <label asp-for="NombreCancion" class="control-label"></label>
                <input asp-for="NombreCancion" class="form-control" />
                <span asp-validation-for="NombreCancion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdArtista" class="control-label"></label>
                <select asp-for="IdArtista" class="form-control" asp-items="ViewBag.Artista"></select>
                <span asp-validation-for="IdArtista" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>


</div>

<div>
    <a asp-action="Index">Regresar al listado</a>
</div>